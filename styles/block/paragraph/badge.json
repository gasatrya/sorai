{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Badge",
  "slug": "badge",
  "blockTypes": ["core/paragraph"],
  "styles": {
    "css": "display: inline-flex; align-items: center; justify-content: center; min-width: 2em !important; min-height: 2em; width: fit-content;",
    "border": {
      "radius": "9999px"
    },
    "color": {
      "background": "var:preset|color|secondary",
      "text": "var:preset|color|contrast"
    },
    "spacing": {
      "padding": {
        "top": "var:preset|spacing|5",
        "bottom": "var:preset|spacing|5",
        "left": "var:preset|spacing|5",
        "right": "var:preset|spacing|5"
      }
    },
    "typography": {
      "fontSize": "var:preset|font-size|medium",
      "fontWeight": "600",
      "lineHeight": "1"
    }
  }
}
